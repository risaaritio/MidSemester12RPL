<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        android:padding="2dp">
        <ImageView
            android:id="@+id/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/circleView"
            android:layout_marginBottom="7dp"
            android:layout_toEndOf="@+id/circleView"
            android:layout_toRightOf="@+id/circleView"
            android:text="Nama Idola"
            android:textColor="#253662"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"/>
        <Button
            android:id="@+id/btn_detail"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#1456c0"
            android:text="DETAIL"
            android:textColor="#faf9f9"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btn_share"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="#1456c0"
            android:text="Share"
            android:textColor="#faf9f9"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btndelete"
            android:background="@android:color/transparent"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>