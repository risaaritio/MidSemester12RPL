<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        android:padding="2dp">
        <ImageView
            android:id="@+id/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/circleView"
            android:layout_marginBottom="7dp"
            android:layout_toEndOf="@+id/circleView"
            android:layout_toRightOf="@+id/circleView"
            android:text="Nama Idola"
            android:textColor="#253662"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="45dp">

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="12dp"
                android:background="#1456c0"
                android:text="DETAIL"
                android:textColor="#faf9f9" />
            <Button
                android:id="@+id/btn_share"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="#1456c0"
                android:text="Share"
                android:textColor="#faf9f9"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btndelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:text="delete"
            android:textColor="#000"
            android:background="@android:color/transparent"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>